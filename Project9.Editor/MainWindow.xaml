<Window x:Class="Project9.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Editor">
    <Grid x:Name="RootGrid" Background="DarkSlateGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <MenuBar x:Name="MainMenuBar" Grid.Row="0" Grid.ColumnSpan="2"/>
        
        <!-- Tile Browser on the left -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" 
                      Background="#40000000"
                      Margin="5"
                      Padding="10">
            <StackPanel x:Name="TileBrowserPanel" Spacing="10">
                <TextBlock Text="Tile Browser" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Map area on the right -->
        <Grid Grid.Row="1" Grid.Column="1" x:Name="MapContainer">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Margin="10"
                        Background="#40000000"
                        Padding="10"
                        Spacing="5">
                <TextBlock x:Name="PositionLabel" 
                           Text="Position: (0, 0)" 
                           Foreground="White"
                           FontSize="14"/>
                <TextBlock x:Name="ZoomLabel" 
                           Text="Zoom: 1.0x" 
                           Foreground="White"
                           FontSize="14"/>
                <TextBlock x:Name="SelectedTileLabel" 
                           Text="Selected: None" 
                           Foreground="White"
                           FontSize="14"/>
                <Button x:Name="ResetButton" 
                        Content="Reset Position" 
                        Click="ResetButton_Click"
                        Width="150"
                        Height="35"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
